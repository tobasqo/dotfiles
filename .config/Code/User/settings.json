{
    // editor
    "editor.fontLigatures": true,
    "editor.minimap.enabled": false,
    "editor.mouseWheelZoom": true,
    "editor.lineNumbers": "relative",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorSurroundingLines": 10,
    "editor.fontSize": 15,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "modifications",
    "diffEditor.ignoreTrimWhitespace": true,
    "files.autoSave": "afterDelay",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "window.newWindowDimensions": "maximized",
    // theme
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Night Owl (No Italics)",
    "editor.semanticTokenColorCustomizations": {
        "[Default Dark+]": {
            "enabled": true,
            "rules": {
                "selfParameter": "#e492de"
            }
        }
    },
    "workbench.colorCustomizations": {
        "[Default Dark+]": {
            "editorBracketHighlight.foreground1": "#446db4",
            "editorBracketHighlight.foreground2": "#7aa2f7",
            "editorBracketHighlight.foreground3": "#bb9af7",
            "editorBracketHighlight.foreground4": "#2ac3de",
            "editorBracketHighlight.foreground5": "#7dcfff",
            "editorBracketHighlight.foreground6": "#446db4",
        }
    },
    "editor.tokenColorCustomizations": {
        "[Default Dark+]": {
            "strings": "#86b874",
            "comments": "#636670",
            "numbers": "#ff9e64"
        }
    },
    // git
    "git.autofetch": true,
    "git.suggestSmartCommit": false,
    // vim
    "vim.overrideCopy": true,
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.leader": " ",
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<ESC>",
            ]
        },
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "g",
                "p",
                "d"
            ],
            "commands": [
                "editor.action.peekDefinition"
            ]
        },
        {
            "before": [
                "g",
                "i"
            ],
            "commands": [
                "editor.action.goToImplementation"
            ]
        },
        {
            "before": [
                "g",
                "p",
                "i",
            ],
            "commands": [
                "editor.action.peekImplementation"
            ]
        },
        {
            "before": [
                "g",
                "t"
            ],
            "commands": [
                "editor.action.goToTypeDefinition"
            ]
        },
        {
            "before": [
                "g",
                "p",
                "t"
            ],
            "commands": [
                "editor.action.peekTypeDefinition"
            ]
        },
        {
            "before": [
                "K"
            ],
            "commands": [
                "editor.action.showDefinitionPreviewHover"
            ]
        },
        {
            "before": [
                "<leader>",
                "r",
                "n"
            ],
            "commands": [
                "workbench.action.Rename"
            ]
        },
        {
            "before": [
                "H"
            ],
            "commands": [
                "workbench.action.previousEditor"
            ]
        },
        {
            "before": [
                "L"
            ],
            "commands": [
                "workbench.action.nextEditor"
            ]
        },
        {
            "before": [
                "<ESC><ESC>"
            ],
            "commands": [
                ":nohl"
            ]
        },
        {
            "before": [
                "[",
                "d"
            ],
            "commands": [
                "editor.action.marker.prevInFiles",
            ]
        },
        {
            "before": [
                "]",
                "d"
            ],
            "commands": [
                "editor.action.marker.nextInFiles"
            ]
        },
        {
            "before": [
                "<C-h>"
            ],
            "commands": [
                "workbench.action.focusPreviousGroup"
            ],
        },
        {
            "before": [
                "<C-l>"
            ],
            "commands": [
                "workbench.action.focusNextGroup"
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "f"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "g"
            ],
            "commands": [
                "workbench.view.search"
            ]
        }
    ],
    "vim.operatorPendingModeKeyBindings": [
        {
            "before": [
                "H"
            ],
            "after": [
                "^"
            ]
        },
        {
            "before": [
                "L"
            ],
            "after": [
                "$"
            ]
        },
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                ">",
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        }
    ],
    // python
    "python.analysis.autoImportCompletions": true,
    "python.analysis.inlayHints.callArgumentNames": "partial",
    "python.analysis.autoFormatStrings": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.variableTypes": true,
    "debugpy.showPythonInlineValues": true,
    // mypy
    "mypy.dmypyExecutable": "${workspace}/.venv/bin/dmypy",
    "mypy.runUsingActiveInterpreter": true,
    "mypy.configFile": "pyproject.toml",
    // ruff
    "ruff.configuration": "pyproject.toml",
}